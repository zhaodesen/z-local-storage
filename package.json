{
	"name": "z-local-storage",
	"version": "1.0.2",
	"description": "Simplify working with window.localStorage.",
	"type": "module",
	"packageManager": "pnpm@8.6.6",
	"scripts": {
		"build": "npm-run-all --silent clean build:es build:umd",
		"release": "bumpp && pnpm publish",
		"build:es": "rollup --config build/rollup.config.es.js",
		"build:umd": "rollup --config build/rollup.config.umd.js",
		"typecheck": "tsc --noEmit",
		"lint": "eslint src test --ext ts",
		"clean": "rimraf dist",
		"test": "jest"
	},
	"types": "dist/index.d.ts",
	"main": "dist/z-local-storage.umd.js",
	"module": "dist/z-local-storage.esm.js",
	"browser": "dist/z-local-storage.umd.js",
	"source": "src/index.ts",
	"exports": {
		"types": "./dist/index.d.ts",
		"module": "./dist/z-local-storage.esm.js",
		"import": "./dist/z-local-storage.esm.js",
		"require": "./dist/z-local-storage.umd.js",
		"default": "./dist/z-local-storage.esm.js"
	},
	"files": [
		"dist"
	],
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.ts": "eslint --fix"
	},
	"keywords": [
		"localStorage",
		"LocalStorage",
		"z-local-storage",
		"ZLocalStorage"
	],
	"author": "Zhao De Sen <zhaoevan1995@gmail.com>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zhaodesen/z-local-storage.git"
	},
	"bugs": {
		"url": "https://github.com/zhaodesen/z-local-storage/issues"
	},
	"homepage": "https://github.com/zhaodesen/z-local-storage#readme",
	"license": "MIT",
	"devDependencies": {
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^11.1.5",
		"@types/jest": "^29.5.7",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"bumpp": "^9.2.0",
		"eslint": "^8.52.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"lint-staged": "^15.0.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.5",
		"rollup": "^4.2.0",
		"rollup-plugin-dts": "^6.1.0",
		"simple-git-hooks": "^2.9.0",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2"
	}
}
